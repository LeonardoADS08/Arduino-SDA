<Page x:Class="SDA_Program.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SDA_Program.View"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="Home" Background="#ECF0F1">
    <Grid>
        <Grid x:Name="Arduino_Connection" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="322">
            <GroupBox x:Name="GB_ArduinoConnection" Header="Arduino connection" VerticalAlignment="Top" Height="288" FontSize="24" d:IsLocked="True"/>
            <Label x:Name="L_Port" Content="Port" HorizontalAlignment="Left" Margin="19,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.467,1.192" FontSize="16" Width="42"/>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="99,71,0,0" VerticalAlignment="Top" Width="200" SelectedValuePath="Puerto" DisplayMemberPath="Puerto"/>
            <Label x:Name="L_BaudRate" Content="Puerto" HorizontalAlignment="Left" Margin="19,100,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.467,1.192" FontSize="16" Width="62"/>
            <TextBox x:Name="TB_BaudRate" HorizontalAlignment="Left" Height="23" Margin="99,106,0,0" TextWrapping="Wrap" Text="9600" VerticalAlignment="Top" Width="200" TextAlignment="Right"/>
            <Button x:Name="B_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="199,256,0,0" VerticalAlignment="Top" Width="108"/>
            <Button x:Name="B_Connect" Content="Connect" HorizontalAlignment="Left" Margin="87,256,0,0" VerticalAlignment="Top" Width="106"/>
            <GroupBox x:Name="GB_Serial" Header="Serial" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="108" Width="300" FontSize="18" d:IsLocked="True"/>
            <GroupBox x:Name="GB_ConnectionMode"  Header="Connection Mode" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Height="108" Width="300" FontSize="18" d:IsLocked="True"/>
            <RadioButton x:Name="RB_Default" Content="Default" HorizontalAlignment="Left" Margin="24,172,0,0" VerticalAlignment="Top" Width="111" FontSize="14" IsChecked="True"/>
            <RadioButton x:Name="RB_USB" Content="USB" HorizontalAlignment="Left" Margin="25,197,0,0" VerticalAlignment="Top" Width="111" FontSize="14"/>
            <RadioButton x:Name="RB_Bluetooth" Content="Bluetooth" HorizontalAlignment="Left" Margin="25,222,0,0" VerticalAlignment="Top" Width="111" FontSize="14"/>
        </Grid>
        <GroupBox x:Name="GB_SerialMonitor" Header="Serial Monitor" Margin="340,10,10,10" FontSize="24">
            <DataGrid x:Name="dataGrid" Margin="5" GridLinesVisibility="None"/>
        </GroupBox>



    </Grid>
</Page>
