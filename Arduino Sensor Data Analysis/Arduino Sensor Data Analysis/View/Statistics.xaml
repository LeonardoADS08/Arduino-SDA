            <ComboBox x:Name="CB_General_Variables" HorizontalAlignment="Left" Margin="93,41,0,0" VerticalAlignment="Top" Width="170"/>
        </Grid>
        <Grid x:Name="G_Charts" Margin="10,245,10,10">
            <GroupBox x:Name="GB_Charts" Header="Charts" FontSize="24" d:IsLocked="True"/>
            <Slider x:Name="S_TimeSlider" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Height="28" Width="984"/>
        </Grid>
    </Grid>
</Page>
